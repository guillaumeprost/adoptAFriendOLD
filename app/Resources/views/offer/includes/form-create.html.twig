{% form_theme form ':form:fields.html.twig' %}

{{ form_start(form, {'attr': {'class': 'form'}}) }}
<div class="form-group">
    {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}

    {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            {{ form_label(form.address1)}}
        </div>
        <div class="col-md-10">
            {{ form_widget(form.address1, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            {{ form_label(form.address2)}}
        </div>
        <div class="col-md-10">
            {{ form_widget(form.address2, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>


    {{ form_row(form.address2, {'attr': {'class': 'form-control'}}) }}

    {{ form_row(form.postalCode, {'attr': {'class': 'form-control'}}) }}

    {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}

    {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            {{ form_label(form.animalType)}}
        </div>
        <div class="col-md-10">
            {{ form_widget(form.animalType, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>

<h3>Animaux</h3>
<ul class="tags" data-prototype="{{ form_widget(form.animals.vars.prototype)|e('html_attr') }}">
    {# iterate over each existing tag and render its only field: name #}
    {% for animal in form.animals %}
        <li>{{ form_row(animal.name) }}</li>
    {% endfor %}
</ul>
<div class="form-group">
    <input type="submit" value="CrÃ©er" class="btn-lg btn-default btn-success pull-right" />
</div>
{{ form_end(form) }}