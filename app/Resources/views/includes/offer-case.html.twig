<div class="col-xs-12 col-md-6">
    <div class="offer-case" data-href="{{ url('offer_show', {slug: offer.slug}) }}">
        <div class="col-md-4">
            <img data-src="holder.js/140x140" class="img-thumbnail" alt="140x140" style="width: 140px; height: 140px;" src="data:image/svg+xml;base64," data-holder-rendered="true">
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-9">
                    {{ offer.title }}
                </div>
                <div class="col-md-3">
                    {% if offer.animalType == 'Dog' %}
                        <img src="{{ asset('img/icons/dog.png') }}" alt="chien">
                    {% elseif offer.animalType == 'Cat' %}
                        <img src="{{ asset('img/icons/cat.png') }}" alt="chat">
                    {% endif %}
                    <span class="badge pull-right">2</span>
                </div>
            </div>
            <br>
            <div class="row offer-description">
                <div class="col-md-12">
                    {{ offer.description }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    Offre située à {{ offer.city }} ({{ offer.postalCode }})
                </div>
            </div>
        </div>
    </div>
</div>